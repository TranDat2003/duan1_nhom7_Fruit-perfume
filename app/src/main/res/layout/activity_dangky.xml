<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center|top"
    tools:context=".sigin_sigup.dangky">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#673AB7">

        <ImageView
            android:id="@+id/imageView11"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/baseline_arrow_back_24" />
    </RelativeLayout>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ĐĂNG KÝ TÀI KHOẢN"
        android:layout_gravity="center|top"
        android:textSize="25dp"
       android:layout_marginTop="100dp" />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        app:counterMaxLength="11"
        app:counterEnabled="true"
        app:errorEnabled="true"
        android:layout_gravity="center|top"
        app:helperText="phải là số và tối đa 11 ký tự"
        app:helperTextTextColor="#FF0000"
        android:hint="NHẬP SỐ ĐIỆN THOẠI"
        app:endIconMode="clear_text"
        app:startIconDrawable="@drawable/baseline_call_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="130dp"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/user"
          />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="1dp"
        app:startIconDrawable="@drawable/user"
        app:endIconMode="clear_text"
        android:layout_gravity="center|top"
        android:layout_marginTop="220dp"
        tools:layout_editor_absoluteY="385dp">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/edname"
            android:hint="NHẬP HỌ TÊN" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayout3"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="300dp"
        android:layout_gravity="center|top"
        app:endIconMode="password_toggle"
        app:endIconCheckable="true"
        app:startIconDrawable="@android:drawable/ic_lock_lock"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="524dp">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/edmk"
            android:inputType="textPassword"
            android:hint="NHẬP MK" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="1dp"
        android:layout_marginTop="380dp"
        app:endIconMode="password_toggle"
        android:layout_gravity="center|top"
        app:startIconDrawable="@android:drawable/ic_lock_lock"
        tools:layout_editor_absoluteY="663dp">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/edmk2"
            android:inputType="textPassword"
            android:hint="XÁC NHẬN LẠI MK" />


    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="360dp"
        android:layout_marginTop="460dp"
        app:startIconDrawable="@drawable/location"
        android:layout_gravity="center|top"
        android:layout_height="wrap_content">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:endIconMode="clear_text"
            android:id="@+id/ediachi"
            android:hint="NHẬP ĐỊA CHỈ" />
    </com.google.android.material.textfield.TextInputLayout>

    <LinearLayout
       android:layout_width="match_parent"
       android:gravity="center"
        android:layout_marginTop="540dp"
       android:layout_height="wrap_content">
       <Button
           android:id="@+id/button3"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="ĐĂNG KÝ"
           android:background="@drawable/button"/>

   </LinearLayout>

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_marginTop="135dp"
    android:background="#F1F1F1"
    android:gravity="center"
    android:layout_gravity="bottom">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bạn đã có tài khoản?"
        android:id="@+id/dangnhap1"
        android:textSize="20dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dangnhap"
        android:textSize="22dp"
        android:layout_toEndOf="@id/dangnhap1"
        android:text="Đăng nhập"
        android:textColor="#2196F3"/>
</RelativeLayout>
</FrameLayout>